<launch>
  <let  name="urdf_path" 
        value="$(find-pkg-share robot_description)/urdf/robot.urdf.xacro" />
  <let  name="gazebo_config_path" 
        value="$(find-pkg-share robot_bringup)/config/gazebo_bridge.yaml" />
  <let  name="rviz_config_path" 
        value="$(find-pkg-share robot_description)/rviz/urdf_config.rviz" />

  <!-- Publisher -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="use_sim_time" value="true"/>
    <param name="robot_description" 
        value="$(command 'xacro $(var urdf_path)')" />
  </node>

  <!--Test world playing -->
  <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
    <arg name="gz_args" value="$(find-pkg-share robot_bringup)/worlds/test_world.sdf -r" />
  </include>

  <!-- Robot load -->
  <node pkg="ros_gz_sim" exec="create" output="screen" args="-topic robot_description" />

  <!-- Ros GZ Bridge -->
  <node pkg="ros_gz_bridge" exec="parameter_bridge">
    <param name="config_file" value="$(var gazebo_config_path)" />
  </node>

  <!-- Static transform publisher for LiDAR -->
  <node pkg="tf2_ros" exec="static_transform_publisher" output="screen"
        args="0 0 0 0 0 0 base_footprint_link robot/base_footprint_link/lidar" />

  <!-- Rviz config with GUI -->
  <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)" />

</launch>

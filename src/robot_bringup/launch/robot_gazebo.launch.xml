<launch>
  <let  name="urdf_path" 
        value="$(find-pkg-share robot_description)/urdf/robot.urdf.xacro" />
  <let  name="rviz_config_path" 
        value="$(find-pkg-share robot_description)/rviz/urdf_config.rviz" />

  <!-- Publisher -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" 
        value="$(command 'xacro $(var urdf_path)')" />
  </node>

  <!-- Empty world playing-->
  <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
    <arg name="gz_args" value="empty.sdf -r" />
  </include>

  <!-- Robot load -->
  <node pkg="ros_gz_sim" exec="create" output="screen" args="-topic robot_description" />

  <!-- Rviz config with GUI -->
  <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_path)" />

</launch>